!!!
%html
  %head
    %title= page_title
    = site_partial('meta')
    = site_partial('head')
  %body{:class => page_classes}
    = site_partial "nav"
    = yield_content :carousel
    .container
      - if side_menu = has_side_menu and current_page.data.skip_side_menu != true 
        .row
          .col-lg-8= yield
          .col-lg-4= side_menu
      - else
        = yield
    / - if $DEMO      
    /   .container
    /     /= current_page.path
    /     = partial("_demo/#{current_page.path}") rescue nil
    = site_partial "footer"
    = javascript_include_tag  "all"

