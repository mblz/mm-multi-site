<meta property="og:title" 
		content="<%= page_title %>" />
<meta property="og:type" 
			content="website" />
<meta property="og:url" 
			content="//www.<%=site.hostname + current_page.url %>" />
<% if site.meta_image %>			
<meta property="og:image" 
			content="=//www.<%=site.hostname  + site.meta_image %>" />
<% end %>
<meta property="og:site_name" 
			content="<%= site.title + " " + site.subtitle.to_s%>" />
<meta property="og:description" 
			content="<%= current_page.data["description"] %>" />
<meta property="article:published_time" 
			content="<%= Time.now %>" />
<meta property="article:modified_time" 
		content="<%= Time.now %> " />
	