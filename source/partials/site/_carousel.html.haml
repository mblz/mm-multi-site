#myCarousel.carousel.slide{"data-ride" => "carousel"}
  / Indicators
  %ol.carousel-indicators
    - carousel.each_with_index do |img, idx|
      %li{class: idx == 0  ? 'active' : nil,"data-slide-to" => idx , "data-target" => "#myCarousel"}
  .carousel-inner{:role => "listbox"}
    - carousel.each_with_index do |img, idx|
      .item{class: idx == 0 ? 'active' : nil}
        = image_tag "carousel/#{img}", class: 'img-responsive', style: "width:100%"
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left.hidden-xs{"aria-hidden" => "true"}
    %span.sr-only Previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right.hidden-xs{"aria-hidden" => "true"}
    %span.sr-only Next
