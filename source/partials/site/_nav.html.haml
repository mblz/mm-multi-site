.navbar-wrapper
  .container
    .navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "/index.html", class: "navbar-brand" do
            - if site.logo != false
              = image_tag "logo.png", class: "img-responsive", id: "logo"
            - else
              = site.title
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            - site[:nav].each do |nav|
              %li{class: nav_active?(nav) ? 'active' : nil}
                - if nav.is_a?(String)
                  = link_to nav, "/#{nav.downcase}.html"  
                - else
                  - if nav.cnt
                    = link_to nav.title, "/content/#{$SITE}/#{nav.title.downcase}.html"   
                  - else  
                    = link_to nav.title, nav.url      
