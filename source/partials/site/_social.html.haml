%a(name='social')
%h4 Social Media Links
- if fb = site.social.facebook
  %a(href="https://www.facebook.com/#{fb}" class="btn btn-social-icon btn-facebook" data-toggle="tooltip" title="Facebook")
    %i(class="fa fa-facebook")

- if gplus = site.social.google_plus
  %a(href="https://plus.google.com/+#{gplus}" class="btn btn-social-icon btn-google-plus" data-toggle="tooltip" title="Google Plus")
    %i(class="fa fa-google-plus")          
- if tw = site.social.twitter
  %a(href="https://twitter.com" class="btn btn-social-icon btn-twitter" data-toggle="tooltip" title="Twitter")
    %i(class="fa fa-twitter")   
- if insta = site.social.insta
  %a(href="https://instagram.com/#{insta}" class="btn btn-social-icon btn-instagram" data-toggle="tooltip" title="Instagram")
    %i(class="fa fa-instagram")         
- if pin = site.social.pinterest
  %a(href="https://pinterest.com/#{pin}" class="btn btn-social-icon btn-pintrest" data-toggle="tooltip" title="Pinterest")
    %i(class="fa fa-pinterest")  
- if yelp = site.social.yelp
  %a(href="http://yelp.com/biz/#{yelp}" class="btn btn-social-icon btn-yelp" data-toggle="tooltip" title="Yelp")
    %i(class="fa fa-yelp")      
- if angie = site.social.angies_list
  %a(href="http://www.angieslist.com/AngiesList/Review/#{angie}" data-toggle="tooltip" title="Angie's List")
    %img(src="http://assets.integrated-internet.com/sites/site/assets/img/social/angie.jpeg")   


