---
title: Site Image gallery
keywords: images, portfolio, gallery
---
= stylesheet_link_tag "gallery/blueimp.css", :media => "screen", :rel => "stylesheet", :type => "text/css"
= javascript_include_tag "gallery/blueimp.min.js"


.container
  %h1.page-header 
    Gallery
    %small Portfolio
#blueimp-gallery.blueimp-gallery.blueimp-gallery-controls
  .slides
  %h3.title
  %a.prev &laquo;
  %a.next &raquo;
  %a.close x
  %a.play-pause
  %ol.indicator

#gallery
  .container
    .row
      - galleries.each do |gallery|
        .panel.panel-default.gallery
          .panel-heading= gallery.title
          .panel-body
            - gallery.images.each do |image|
              - url       = "/assets/img/gallery/#{gallery.name}/#{image.name}"
              - thumb_url = "/assets/img/gallery/#{gallery.name}/thumb/#{image.name}"
              - title     = gallery.title + " " + image.title
              = link_to url, title: title do
                = image_tag thumb_url, 'data-toggle' => :tooltip, title: image.title, class: 'img-rounded' #, class: 'thumbnail'

= javascript_include_tag 'gallery/init'
