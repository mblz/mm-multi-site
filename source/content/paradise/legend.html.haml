/= site(:products).find_all{|p| p[:product_category_id] == 1 && p.location == 1}
- cats = site('categories')
%table.table#legend(style="text-align:center")
  %tr
    - trees = cats.find{|c| c.name == 'Trees'} 
    %td(colspan=4 style="background-color: #{trees.html_color}") 

      %h3 Trees
      = location_matrix(trees, nil)


  %tr
    - ground = cats.find{|c| c.name == 'Ground Cover'} 
    %td(style="background-color: #{ground.html_color}")
      
      %h3
        Ground Cover
